#!/bin/bash
# postinst script for rabbitim
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

function EnumerateDicectory(){
    for _file in `ls $1`
    do
        if [ -d "$1/${_file}" ]; then
            echo "$1/${_file}" >> /etc/ld.so.conf.d/RabbitIm.conf
            EnumerateDicectory "$1/${_file}"
        fi
    done
}

RABBITIM_INSTALL_PREFIX=/opt/RabbitIm
case "$1" in
    configure)
        # 建立 log 目录
        mkdir -p $RABBITIM_INSTALL_PREFIX/log
        chmod 777 $RABBITIM_INSTALL_PREFIX/log
        ln -s $RABBITIM_INSTALL_PREFIX/log $RABBITIM_INSTALL_PREFIX/bin/log
        
        echo "${RABBITIM_INSTALL_PREFIX}/lib" > /etc/ld.so.conf.d/RabbitIm.conf
        echo "${RABBITIM_INSTALL_PREFIX}/lib/`uname -m`-linux-gnu" >> /etc/ld.so.conf.d/RabbitIm.conf
        echo "${RABBITIM_INSTALL_PREFIX}/plugins" >> /etc/ld.so.conf.d/RabbitIm.conf
        EnumerateDicectory "${RABBITIM_INSTALL_PREFIX}/plugins"
        ldconfig
        
        if [ ! -f /usr/share/applications/RabbitIm.desktop ]; then
            ln -s ${RABBITIM_INSTALL_PREFIX}/share/applications/RabbitIm.desktop /usr/share/applications/RabbitIm.desktop
            ln -s ${RABBITIM_INSTALL_PREFIX}/share/applications/RabbitIm.desktop /etc/xdg/autostart/RabbitIm.desktop
        fi
        if [ ! -f /usr/share/pixmaps/RabbitIm.png ]; then
            if [ ! -d /usr/share/pixmaps ]; then
                mkdir -p /usr/share/pixmaps
            fi
            ln -s ${RABBITIM_INSTALL_PREFIX}/share/pixmaps/RabbitIm.png /usr/share/pixmaps/RabbitIm.png
        fi
        ;;

    abort-upgrade|abort-remove|abort-deconfigure)
        rm -f /etc/ld.so.conf.d/RabbitIm.conf
        ldconfig
        rm -f /usr/share/applications/RabbitIm.desktop
        rm -f /etc/xdg/autostart/RabbitIm.desktop
        rm -f /usr/share/pixmaps/RabbitIm.png
        rm -fr $RABBITIM_INSTALL_PREFIX/log
    ;;

    *)
        echo "postinst called with unknown argument '$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
